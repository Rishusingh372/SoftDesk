
# Database Configuration
DB_URI=mongodb://127.0.0.1:27017/softDesk  # Replace with your MongoDB URI
DB_NAME=softDesk  # Replace with your database name

# JWT Token Secrets
ACCESS_TOKEN_SECRET=rishu@123  # A strong secret key for access tokens
ACCESS_TOKEN_EXPIRY=6h  # Token expiry time (e.g., 1h, 15m)
REFRESH_TOKEN_SECRET=rishu4123 # A strong secret key for refresh tokens
REFRESH_TOKEN_EXPIRY=7d  # Refresh token expiry time (e.g., 7d, 30d)

# Server Configuration
PORT=9998  # Port number for the server (default is 9998 if not set)

# Email Configuration (for SendGrid)
SG_EMAIL_API_KEY=your_sendgrid_api_key  # Your SendGrid API key
SG_EMAIL=your_verified_sender_email@domain.com  # Verified sender email in SendGrid

# Alternative Email Configuration (if using Gmail or other SMTP)
EMAIL_USER=your_email@gmail.com  # Your email address
MAIL_SERVICE_PASSWORD_7225=your_app_password  # App password for Gmail (16-character)
